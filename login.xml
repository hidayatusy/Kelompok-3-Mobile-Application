<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1"
    android:id="@+id/login"
    tools:context=".login"
    >
    <ImageView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:background="@drawable/bni2" />
    <EditText
        android:id="@+id/EditTextEmail"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="10dp"
        android:background="@color/white"
        android:gravity="start"
        android:hint="Masukkan Email Anda"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:maxLength="30"
        android:padding="20dp"
        android:textColorHint="@color/gray" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/finger"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/orange1"
        android:text="LogIn"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:backgroundTint="@color/light1"
        android:textColor="@color/orange1"
        android:text="Sign up"
        android:layout_below="@id/btn1"
        />

    <TextView
        android:id="@+id/opsi"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/baseline_help_24"
        android:drawablePadding="10dp"
        android:layout_below="@id/EditTextEmail"
        android:gravity="start"
        android:hint="Butuh bantuan"
        android:padding="0dp"
        android:textColorHint="@color/black" />

    <Button
        android:id="@+id/finger"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_below="@id/opsi"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/fingerprint"
        android:drawableTint="@color/black"
        android:gravity="center" />
</RelativeLayout>