<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1"
    android:id="@+id/layout1"
    tools:context=".register">
    <ImageView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:background="@drawable/bni2" />

    <EditText
        android:id="@+id/EditTextEmail"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="18dp"
        android:background="@color/white"
        android:drawablePadding="10dp"
        android:gravity="start"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/baseline_email_24"
        android:hint="Masukkan Email Anda"
        android:inputType="textEmailAddress"
        android:maxLength="30"
        android:padding="20dp"
        android:textColorHint="@color/gray" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="18dp"
        android:layout_below="@id/EditTextEmail"
        android:drawableLeft="@drawable/baseline_key_24"
        android:drawablePadding="10dp"
        android:background="@color/white"
        android:hint="Masukkan Password"
        android:inputType="textPassword"
        android:padding="18dp"
        android:textColorHint="@color/gray"
        android:gravity="start"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/rekening"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Password"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="18dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/baseline_numbers_24"
        android:drawablePadding="10dp"
        android:gravity="start"
        android:hint="No.rekening"
        android:inputType="textPassword"
        android:padding="18dp"
        android:textColorHint="@color/gray"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/baseline_help_24"
        android:drawablePadding="10dp"
        android:layout_below="@id/rekening"
        android:gravity="start"
        android:hint="Buat Rekening"
        android:padding="0dp"
        android:textColorHint="@color/gray" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="580dp"
        android:text="sign up "
        android:background="@drawable/custom_text1"
        android:textColor="@color/orange1"
        android:textSize="15dp"
        />
</RelativeLayout>
