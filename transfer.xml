<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transfer">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Transfer"
            android:textSize="24dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"/>

    </LinearLayout>
    <RelativeLayout android:id="@+id/rek"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/t8">

        <ImageButton
            android:id="@+id/transfer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/person_24" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/atm"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/t0">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bni" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/antarbank"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/t8">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/account_balance_24" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/uangpensiun"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/t8">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/local_florist_24" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/valas"
        android:layout_below="@id/line1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/t0">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/exchange_24" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/inter"
        android:layout_below="@id/line1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/t8">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/public_24" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/akun"
        android:layout_below="@id/line1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/t8">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/credit_score_24" />
    </RelativeLayout>
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Pilih Metode Transfer"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"/>
    <RelativeLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/rek">
        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Rekening Sendiri"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="BNI"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:layout_marginLeft="85dp"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Antarbank"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:layout_marginLeft="163dp"/>
        <TextView
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:text="Dana Pensiun/BNI Simponi"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:layout_marginLeft="240dp"/>
    </RelativeLayout>
    <RelativeLayout
    android:id="@+id/line2"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginTop="20dp"
    android:layout_below="@id/inter">
        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Virtual Account"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Internationa Remittance"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13dp"

            android:layout_marginLeft="85dp"/>
        <TextView
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:text="Transfer Valas Antar BNI"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:layout_marginLeft="165dp"/>
    </RelativeLayout>

</RelativeLayout>